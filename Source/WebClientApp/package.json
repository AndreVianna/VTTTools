{
  "name": "vtttools-webclientapp",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:standalone": "cross-env VITE_STANDALONE=true vite --mode standalone",
    "build": "vite build",
    "build:standalone": "cross-env VITE_STANDALONE=true vite build --mode standalone",
    "preview": "vite preview --port 4173",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "biome-lint": "biome lint .",
    "biome-lint:fix": "biome lint --write --unsafe .",
    "biome-format": "biome format .",
    "biome-format:fix": "biome format --write --unsafe .",
    "biome": "biome check .",
    "biome:fix": "biome check --write --unsafe .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:bdd": "cross-env NODE_OPTIONS='--disable-warning=DEP0180' cucumber-js",
    "test:bdd:dry-run": "cross-env NODE_OPTIONS='--disable-warning=DEP0180' cucumber-js --dry-run",
    "test:bdd:feature": "node run-feature.cjs",
    "test:bdd:smoke": "cross-env NODE_OPTIONS='--disable-warning=DEP0180' cucumber-js --profile smoke",
    "test:bdd:happy-path": "cross-env NODE_OPTIONS='--disable-warning=DEP0180' cucumber-js --profile happy-path",
    "test:bdd:critical": "cross-env NODE_OPTIONS='--disable-warning=DEP0180' cucumber-js --profile critical",
    "test:bdd:debug": "cross-env DEBUG_MODE=true NODE_OPTIONS='--disable-warning=DEP0180' cucumber-js --profile debug",
    "test:bdd:scenario": "cross-env NODE_OPTIONS='--disable-warning=DEP0180' cucumber-js --name",
    "test:bdd:debug:scenario": "cross-env DEBUG_MODE=true NODE_OPTIONS='--disable-warning=DEP0180' cucumber-js --profile debug --name",
    "health": "curl -f http://localhost:5173/health || exit 1"
  },
  "overrides": {
    "diff": "^8.0.3"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@microsoft/signalr": "^10.0.0",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/x-data-grid": "^8.20.0",
    "@mui/x-tree-view": "^8.26.0",
    "@reduxjs/toolkit": "^2.9.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vtttools/web-components": "file:../WebComponents",
    "axios": "^1.12.1",
    "konva": "^10.2.0",
    "polygon-clipping": "^0.15.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.71.1",
    "react-konva": "^19.0.10",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.1",
    "use-image": "^1.1.4",
    "vite": "^7.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@cucumber/cucumber": "^12.2.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/mssql": "^9.1.9",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "happy-dom": "^20.0.0",
    "jsdom": "^27.4.0",
    "msnodesqlv8": "^5.1.1",
    "mssql": "^12.0.0",
    "msw": "^2.12.7",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.18"
  }
}
