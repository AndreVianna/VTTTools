@inherits PublicComponent

<div class="top-row ps-3 navbar navbar-dark">
  <div class="container-fluid">
  <a class="navbar-brand" href="">VTT Tools</a>
  </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
  <nav class="nav flex-column">
  <div class="nav-item px-3">
    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
      <span class="md-symbol home filled" aria-hidden="true"></span> Home
    </NavLink>
  </div>

  <AuthorizeView>
    <NotAuthorized>
      <div class="nav-item px-3">
        <NavLink class="nav-link" href="account/register">
          <span class="md-symbol register filled" aria-hidden="true"></span> Register
        </NavLink>
      </div>
      <div class="nav-item px-3">
        <NavLink class="nav-link" href="account/login">
          <span class="md-symbol login filled" aria-hidden="true"></span> Login
        </NavLink>
      </div>
    </NotAuthorized>
    <Authorized>
    <div class="nav-item px-3">
      <form id="logout-form" action="@LogoutUri" method="post">
      <AntiforgeryToken/>
      <input type="hidden" name="ReturnUrl" value="@CurrentLocation"/>
      <button id="logout-submit" type="submit" class="nav-link">
        <span class="md-symbol logout filled" aria-hidden="true"></span> Logout
      </button>
      </form>
    </div>
    <div class="nav-item px-3">
      <NavLink class="nav-link" href="account/manage">
      <span class="md-symbol profile filled" aria-hidden="true"></span> @UserDisplayName
      </NavLink>
    </div>
    <div class="nav-item px-3">
      <NavLink class="nav-link" href="sessions">
      <span class="md-symbol schedule" aria-hidden="true"></span> Game Sessions
      </NavLink>
    </div>
    <div class="nav-item px-3">
      <NavLink class="nav-link" href="adventures">
      <span class="md-symbol library filled" aria-hidden="true"></span> Library
      </NavLink>
    </div>
    <div class="nav-item px-3">
      <NavLink class="nav-link" href="assets">
      <span class="md-symbol assets" aria-hidden="true"></span> Assets
      </NavLink>
    </div>
    </Authorized>
  </AuthorizeView>
  </nav>
</div>
