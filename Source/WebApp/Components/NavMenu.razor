@inherits Component

<nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
  <div class="container-fluid">
    <a class="navbar-brand text-light" href="/">VTT Tools</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <AuthorizeView>
        <Authorized>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <NavLink class="nav-link dropdown-toggle text-light" role="button" data-bs-toggle="dropdown">
                Events
              </NavLink>
              <ul class="dropdown-menu dropdown-menu-dark custom-dropdown-menu">
                <li><a class="dropdown-item" href="#">Upcoming Games</a></li>
                <li><a class="dropdown-item" href="#">Past Games</a></li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <NavLink class="nav-link dropdown-toggle text-light" role="button" data-bs-toggle="dropdown">
                Library
              </NavLink>
              <ul class="dropdown-menu dropdown-menu-dark custom-dropdown-menu">
                <li><a class="dropdown-item" href="#">Books</a></li>
                <li><a class="dropdown-item" href="#">Guides</a></li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <NavLink class="nav-link dropdown-toggle text-light" role="button" data-bs-toggle="dropdown">
                Assets
              </NavLink>
              <ul class="dropdown-menu dropdown-menu-dark custom-dropdown-menu">
                <li><a class="dropdown-item" href="#">Characters</a></li>
                <li><a class="dropdown-item" href="#">Maps</a></li>
              </ul>
            </li>
          </ul>

          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <NavLink class="nav-link text-light" href="@ProfileUri">
                <span class="icon small profile filled me-1" aria-hidden="true"></span>@User!.DisplayName
              </NavLink>
            </li>
            <li class="nav-item">
              <NavLink class="nav-link text-light" href="@LogoutUri">
                <span class="icon small logout me-1"></span>Logout
              </NavLink>
            </li>
          </ul>
        </Authorized>

        <NotAuthorized>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <NavLink class="nav-link text-light" href="@LoginUri">
                <span class="icon small login"></span> Login
              </NavLink>
            </li>
            <li class="nav-item">
              <NavLink class="nav-link text-light" href="@RegisterUri">
                <span class="icon small register"></span> Register
              </NavLink>
            </li>
          </ul>
        </NotAuthorized>
      </AuthorizeView>
    </div>
  </div>
</nav>
