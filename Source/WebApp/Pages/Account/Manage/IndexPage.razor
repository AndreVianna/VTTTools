@page "/account/manage"
@inherits ExtendedComponent<IndexPageHandler>

<PageTitle>Profile</PageTitle>

<h3>Profile</h3>
<StatusMessageComponent />

<div class="row">
  <div class="col-xl-6">
    <EditForm Model="State.Input" FormName="profile" OnValidSubmit="OnValidSubmitAsync" method="post">
      <DataAnnotationsValidator />
      <ValidationSummary class="text-danger" role="alert" />
      <div class="form-floating mb-3">
        <input type="text" value="@State.Username" id="username" class="form-control" placeholder="Choose your username." disabled />
        <label for="username" class="form-label">Username</label>
      </div>
      <div class="form-floating mb-3">
        <InputText @bind-Value="State.Input.PhoneNumber" id="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
        <label for="Input.PhoneNumber" class="form-label">Phone number</label>
        <ValidationMessage For="() => State.Input.PhoneNumber" class="text-danger" />
      </div>
      <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
    </EditForm>
  </div>
</div>
