{
  "compilerOptions": {
    "target": "ES2020",
    "module": "none",
    "lib": ["DOM", "ES2020"],
    "outFile": "./wwwroot/builder.js",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "classic",
    "allowSyntheticDefaultImports": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": false
  },
  "files": [
    "src/constants/RenderConstants.ts",
    "src/types/IPoint.ts",
    "src/types/ISize.ts",
    "src/types/IRectangle.ts",
    "src/types/IGrid.ts",
    "src/types/GridType.ts",
    "src/types/IBuilderState.ts",
    "src/types/IBuilder.ts",
    "src/types/ILayersSetup.ts",
    "src/types/IAsset.ts",
    "src/layers/ILayer.ts",
    "src/layers/Layer.ts",
    "src/layers/IBackgroundLayer.ts",
    "src/layers/BackgroundLayer.ts",
    "src/layers/IGridLayer.ts",
    "src/layers/GridLayer.ts",
    "src/layers/IAssetsLayer.ts",
    "src/layers/AssetsLayer.ts",
    "src/utils/ImageCache.ts",
    "src/utils/DomUtils.ts",
    "src/SceneBuilder.ts",
    "src/main.ts"
  ],
  "exclude": [
    "wwwroot/**/*",
    "node_modules",
    "tsconfig.vs.json"
  ]
}