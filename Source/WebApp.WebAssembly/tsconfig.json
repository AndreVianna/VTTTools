{
  "compilerOptions": {
    "target": "ES2020",
    "module": "none",
    "lib": [ "DOM", "ES2020" ],
    "outFile": "./wwwroot/sceneBuilder.js",
    "rootDir": "./Scripts",
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "classic",
    "allowSyntheticDefaultImports": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": false
  },
  "files": [
    "Scripts/Constants/RenderConstants.ts",
    "Scripts/Types/IPoint.ts",
    "Scripts/Types/ISize.ts",
    "Scripts/Types/IRectangle.ts",
    "Scripts/Types/IStage.ts",
    "Scripts/Types/IGrid.ts",
    "Scripts/Types/GridType.ts",
    "Scripts/Types/IBuilderState.ts",
    "Scripts/Types/IBuilder.ts",
    "Scripts/Types/ILayersSetup.ts",
    "Scripts/Types/IAsset.ts",
    "Scripts/Layers/ILayer.ts",
    "Scripts/Layers/Layer.ts",
    "Scripts/Layers/IBackgroundLayer.ts",
    "Scripts/Layers/BackgroundLayer.ts",
    "Scripts/Layers/IGridLayer.ts",
    "Scripts/Layers/GridLayer.ts",
    "Scripts/Layers/IAssetsLayer.ts",
    "Scripts/Layers/AssetsLayer.ts",
    "Scripts/Utilities/ImageCache.ts",
    "Scripts/Utilities/DomUtilities.ts",
    "Scripts/SceneBuilder.ts",
    "Scripts/Main.ts"
  ],
  "exclude": [
    "wwwroot/**/*",
    "node_modules",
    "tsconfig.vs.json"
  ]
}