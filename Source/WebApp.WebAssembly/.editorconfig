root = true

[*.{ts,tsx,js,jsx}]
# Disable ReSharper TypeScript analysis - use Visual Studio's native TypeScript support
resharper_*_highlighting = none
# Keep formatting settings
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2