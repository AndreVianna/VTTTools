{
  "thinking": {
    "type": "stdio",
    "command": "cmd",
    "args": [
      "/c",
      "npx",
      "-y",
      "@modelcontextprotocol/server-sequential-thinking"
    ],
    "env": {}
  },
  "memory": {
    "type": "stdio",
    "command": "cmd",
    "args": [
      "/c",
      "npx",
      "-y",
      "@modelcontextprotocol/server-memory"
    ],
    "env": {
      "MEMORY_FILE_PATH": "{PROJECT_ROOT}\\.claude\\memory.local.json"
    }
  },
  "{MCP_NAME}": {
    "type": "{MCP_TYPE}",
    "command": "{MCP_COMMAND}",
    "args": [
      "{MCP_ARGS}"
    ],
    "env": {
        "{MCP_ENV_VAR_NAME}": "{MCP_ENV_VAR_VALUE}"
    }
  }
}

