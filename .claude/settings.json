{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "os": "windows",
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "MultiEdit",
      "Write",
      "Agent",
      "Glob",
      "Grep",
      "LS",
      "TodoRead",
      "TodoWrite",
      "WebSearch",
      "WebFetch",
      "mcp__memory__read_graph",
      "mcp__memory__search_nodes",
      "mcp__memory__open_nodes",
      "mcp__memory__create_entities",
      "mcp__memory__delete_entities",
      "mcp__memory__create_relations",
      "mcp__memory__delete_relations",
      "mcp__memory__add_observations",
      "mcp__memory__delete_observations",
      "mcp__thinking__sequentialthinking"
    ],
    "deny": []
  },
  "outputStyle": "default",
  "statusLine": {
    "type": "command",
    "command": "pwsh -ExecutionPolicy Bypass -File \"C:\\Projects\\Personal\\VTTTools\\.claude\\scripts\\utilities\\set_status_line.ps1\""
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -ExecutionPolicy Bypass -File \".claude/scripts/hooks/session_start.ps1\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -ExecutionPolicy Bypass -File \".claude/scripts/hooks/session_end.ps1\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -ExecutionPolicy Bypass -File \".claude/scripts/hooks/user_prompt_submit.ps1\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -ExecutionPolicy Bypass -File \".claude/scripts/hooks/pre_tool_use.ps1\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -ExecutionPolicy Bypass -File \".claude/scripts/hooks/post_tool_use.ps1\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -ExecutionPolicy Bypass -File \".claude/scripts/hooks/stop.ps1\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -ExecutionPolicy Bypass -File \".claude/scripts/hooks/subagent_stop.ps1\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -ExecutionPolicy Bypass -File \".claude/scripts/hooks/notification.ps1\""
          }
        ]
      }
    ]
  }
}
